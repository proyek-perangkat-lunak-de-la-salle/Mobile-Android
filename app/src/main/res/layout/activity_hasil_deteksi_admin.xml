                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="4dp"
                        android:text="Nama"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
